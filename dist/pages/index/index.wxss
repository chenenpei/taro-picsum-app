.index {
  font-family: "Avenir", Helvetica, Arial, sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  text-align: center;
}
.index .infiniteUl {
  height: 100vh;
  width: 100%;
  overflow-y: auto;
  overflow-x: hidden;
}
.index .infiniteLi {
  margin-top: 32rpx;
  font-size: 28rpx;
  width: 100%;
  color: #646464;
  text-align: center;
}
.index .infiniteLi .content {
  width: 100%;
}
.index .infiniteLi .content image {
  width: 100%;
}
